<h1>Listing songs</h1>

<table>
  <thead>
    <tr>
      <th>Spotify uri</th>
      <th>Added by uri</th>
      <th>Added by username</th>
      <th>Added by uri</th>
      <th>Added on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.spotify_uri %></td>
        <td><%= song.added_by_uri %></td>
        <td><%= song.added_by_username %></td>
        <td><%= song.added_by_uri %></td>
        <td><%= song.added_on %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

